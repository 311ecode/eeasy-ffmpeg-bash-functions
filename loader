#!/bin/bash
# Sources all .sh scripts for the fff project

# Guard to prevent sourcing multiple times
if [[ -n "$LOADER_EZFFF_0A4D2461_LOADED" ]]; then
    return 0
fi
export LOADER_EZFFF_0A4D2461_LOADED=1

# Determine this script's own directory
export LOADER_EZFFF_0A4D2461_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" &>/dev/null && pwd)"

# --- Core Logic ---
source "$LOADER_EZFFF_0A4D2461_DIR/fff.sh"
source "$LOADER_EZFFF_0A4D2461_DIR/fff_interactive.sh"
source "$LOADER_EZFFF_0A4D2461_DIR/fff_functions/fff_help.sh"

# --- Feature Modules ---
source "$LOADER_EZFFF_0A4D2461_DIR/fff_functions/fff_convert.sh"
source "$LOADER_EZFFF_0A4D2461_DIR/fff_functions/fff_compress.sh"
source "$LOADER_EZFFF_0A4D2461_DIR/fff_functions/fff_trim.sh"

# Visual Adjustments
source "$LOADER_EZFFF_0A4D2461_DIR/fff_functions/fff_resize.sh"
source "$LOADER_EZFFF_0A4D2461_DIR/fff_functions/fff_rotate.sh"
source "$LOADER_EZFFF_0A4D2461_DIR/fff_functions/fff_flip.sh"
source "$LOADER_EZFFF_0A4D2461_DIR/fff_functions/fff_crop.sh"

# Video/Audio Effects
source "$LOADER_EZFFF_0A4D2461_DIR/fff_functions/fff_speed.sh"
source "$LOADER_EZFFF_0A4D2461_DIR/fff_functions/fff_reverse.sh"
source "$LOADER_EZFFF_0A4D2461_DIR/fff_functions/fff_grayscale.sh"
source "$LOADER_EZFFF_0A4D2461_DIR/fff_functions/fff_mute.sh"
source "$LOADER_EZFFF_0A4D2461_DIR/fff_functions/fff_merge.sh"
source "$LOADER_EZFFF_0A4D2461_DIR/fff_functions/fff_loop.sh"

# Utilities & Cleanup
source "$LOADER_EZFFF_0A4D2461_DIR/fff_functions/fff_extract.sh"
source "$LOADER_EZFFF_0A4D2461_DIR/fff_functions/fff_thumbnail.sh"
source "$LOADER_EZFFF_0A4D2461_DIR/fff_functions/fff_stabilize.sh"
source "$LOADER_EZFFF_0A4D2461_DIR/fff_functions/fff_denoise.sh"

# --- Test Suites ---
source "$LOADER_EZFFF_0A4D2461_DIR/tests/test_fff_all.sh"
source "$LOADER_EZFFF_0A4D2461_DIR/tests/test_fff.sh"
source "$LOADER_EZFFF_0A4D2461_DIR/tests/test_fff_visual.sh"
source "$LOADER_EZFFF_0A4D2461_DIR/tests/test_fff_cleanup.sh"
source "$LOADER_EZFFF_0A4D2461_DIR/tests/test_fff_merge_loop.sh"
