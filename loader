#!/bin/bash
# Sources all .sh scripts for the fff project statically

# Guard to prevent sourcing multiple times
if [[ -n "$LOADER_EZFFF_LOADED" ]]; then
    return 0
fi
export LOADER_EZFFF_LOADED=1

# Determine this script's own directory safely once
export EZFFF_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" &>/dev/null && pwd)"

# --- Core ---
source "$EZFFF_DIR/fff.sh"
source "$EZFFF_DIR/fff_interactive.sh"

# --- Feature Functions ---
# We source these explicitly so they are available in the shell namespace
source "$EZFFF_DIR/fff_functions/fff_help.sh"
source "$EZFFF_DIR/fff_functions/fff_convert.sh"
source "$EZFFF_DIR/fff_functions/fff_compress.sh"
source "$EZFFF_DIR/fff_functions/fff_trim.sh"
source "$EZFFF_DIR/fff_functions/fff_resize.sh"
source "$EZFFF_DIR/fff_functions/fff_rotate.sh"
source "$EZFFF_DIR/fff_functions/fff_flip.sh"
source "$EZFFF_DIR/fff_functions/fff_crop.sh"
source "$EZFFF_DIR/fff_functions/fff_speed.sh"
source "$EZFFF_DIR/fff_functions/fff_reverse.sh"
source "$EZFFF_DIR/fff_functions/fff_grayscale.sh"
# source "$EZFFF_DIR/fff_functions/fff_mute.sh"
source "$EZFFF_DIR/fff_functions/fff_merge.sh"
source "$EZFFF_DIR/fff_functions/fff_loop.sh"
# source "$EZFFF_DIR/fff_functions/fff_extract.sh"
# source "$EZFFF_DIR/fff_functions/fff_thumbnail.sh"
source "$EZFFF_DIR/fff_functions/fff_stabilize.sh"
source "$EZFFF_DIR/fff_functions/fff_denoise.sh"
