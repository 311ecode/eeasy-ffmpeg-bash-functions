#!/bin/bash
# Sources all test scripts

if [[ -n "$LOADER_EZFFF_TESTS_LOADED" ]]; then
    return 0
fi
export LOADER_EZFFF_TESTS_LOADED=1

# Determine directory
TEST_LOADER_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" &>/dev/null && pwd)"

# --- Test Suites ---
source "$TEST_LOADER_DIR/tests/test_fff_all.sh"
source "$TEST_LOADER_DIR/tests/test_fff.sh"
source "$TEST_LOADER_DIR/tests/test_fff_visual.sh"
source "$TEST_LOADER_DIR/tests/test_fff_cleanup.sh"
source "$TEST_LOADER_DIR/tests/test_fff_merge_loop.sh"
